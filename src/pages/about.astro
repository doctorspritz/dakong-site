---
import Layout from '../layouts/Layout.astro';
import ModernHero from '../components/organisms/ModernHero.astro';
import Heading from '../components/atoms/Heading.astro';
import Button from '../components/atoms/Button.astro';
import Card from '../components/molecules/Card.astro';
import { Icon } from 'astro-icon/components';

const pillars = [
  {
    icon: 'tabler/user',
    title: 'Client‑centric Approach',
    description: "We learn each customer's needs and tailor our operational processes to align.",
  },
  {
    icon: 'tabler/briefcase',
    title: 'Experience & Expertise',
    description: 'More than 15 years delivering dependable quality at scale.',
  },
  {
    icon: 'tabler/shield-check',
    title: 'Quality Assurance',
    description: 'GMP‑aligned processes and rigorous quality control standards.',
  },
];

const team = [
  {
    name: 'John Doe',
    position: 'CEO & Founder',
    image: '/images/logo.png',
  },
  {
    name: 'Jane Smith',
    position: 'Head of Production',
    image: '/images/logo.png',
  },
  {
    name: 'Mike Johnson',
    position: 'Education Director',
    image: '/images/logo.png',
  },
  {
    name: 'Sarah Williams',
    position: 'Customer Success Manager',
    image: '/images/logo.png',
  },
];
---

<Layout title="About Us">
  <ModernHero
    title="About Da Kong"
    subtitle="DaKong Education believes in the pursuit of learning through hands‑on activities. Our mission is to provide dependable quality supplies that inspire young makers to exercise their imagination."
    ctaText="Start a Project"
    ctaHref="/contact"
    secondaryCtaText="Our Services"
    secondaryCtaHref="/services"
  />

  <!-- Who We Are -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <Heading as="h2" gradient class="mb-8 text-center">Who We Are</Heading>
        <div class="prose prose-lg mx-auto text-gray-600">
          <p class="mb-6">
            Da Kong is a trusted partner for customized manufacturing and education solutions. From
            concept to delivery, we provide product development, custom kit assembly, packaging and
            end‑to‑end distribution for organizations of all sizes.
          </p>
          <p class="mb-6">
            Our global infrastructure and responsive operating model allow us to adapt to market
            trends and changes in demand, ensuring our clients’ portfolios remain competitive.
          </p>
          <p>
            We exist to make great ideas tangible—reliably, responsibly and at scale.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Do -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <Heading as="h2" class="mb-4">What We Do</Heading>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">End‑to‑end capabilities built for speed and quality.</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <Card title="Product Development" description="Collaborative design, prototyping and sourcing." />
        <Card title="Custom Kits Production" description="Scalable assembly lines for tailored kits." />
        <Card title="Packaging" description="Retail‑ready packaging engineered for protection and appeal." />
        <Card title="Distribution" description="Global logistics for on‑time fulfillment." />
      </div>
    </div>
  </section>

  <!-- Why Work With Da Kong -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-12">
        <Heading as="h2" gradient class="mb-4">Why Work With Da Kong?</Heading>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">The principles behind our long‑term partnerships.</p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {pillars.map((p) => (
          <div class="bg-white rounded-xl p-8 shadow hover:shadow-md transition-shadow">
            <div class="w-16 h-16 rounded-full bg-primary-600 text-white flex items-center justify-center mb-5">
              <Icon name={p.icon} class="w-8 h-8" />
            </div>
            <h3 class="text-xl font-semibold mb-2">{p.title}</h3>
            <p class="text-gray-600">{p.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Facility -->
  <section class="section-padding bg-white">
    <div class="container-custom">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <img src="/images/product-development.png" alt="Our Facility" class="w-full rounded-2xl shadow" />
        <div>
          <Heading as="h2" class="mb-4">Our Facility</Heading>
          <p class="text-lg text-gray-700 mb-4">
            Our factory spans 60,000 sq ft. Half is dedicated to high‑throughput packaging, while
            the other half hosts streamlined assembly lines where custom kits are put together with
            precision.
          </p>
          <p class="text-lg text-gray-700">
            This layout lets us run parallel operations, reduce lead times and maintain strict
            quality control across every order size.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Sustainability -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-10">
        <Heading as="h2" class="mb-4">Sustainability</Heading>
        <p class="text-lg text-gray-700 max-w-3xl mx-auto">
          We help companies achieve eco‑friendlier products and packaging through material
          substitutions, volume optimization and waste reduction.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        <Card title="Eco Materials" description="Recyclable and biodegradable options." />
        <Card title="Efficient Packaging" description="Right‑sized, low‑waste designs." />
        <Card title="Lean Operations" description="Energy‑aware, streamlined processes." />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-primary text-white">
    <div class="container-custom text-center">
      <Heading as="h2" class="mb-4 text-white">Join Our Journey</Heading>
      <p class="text-xl mb-8 text-white/90 max-w-2xl mx-auto">
        Partner with Da Kong to bring your next idea to life—reliably and at scale.
      </p>
      <Button
        href="/contact"
        variant="primary"
        size="lg"
        class="bg-white text-primary hover:bg-gray-100"
      >
        Get in Touch
      </Button>
    </div>
  </section>
</Layout>

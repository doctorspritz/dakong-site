---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/organisms/Hero.astro';
import Heading from '../components/atoms/Heading.astro';
import Button from '../components/atoms/Button.astro';

const contactInfo = [
  {
    icon: 'üìß',
    title: 'Email',
    content: 'info@da-kong.com',
    link: 'mailto:info@da-kong.com',
  },
  {
    icon: 'üìû',
    title: 'Phone',
    content: '+1 (555) 123-4567',
    link: 'tel:+15551234567',
  },
  {
    icon: 'üìç',
    title: 'Address',
    content: '123 Business St, Suite 100, City, State 12345',
    link: '#',
  },
  {
    icon: 'üïê',
    title: 'Business Hours',
    content: 'Mon-Fri: 9AM-6PM EST',
    link: '#',
  },
];
---

<Layout title="Contact">
  <Hero
    title="Get in Touch"
    subtitle="We're here to help with your educational and production needs"
  />

  <!-- Contact Form Section -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="max-w-6xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div>
            <Heading as="h2" class="mb-6">Send Us a Message</Heading>
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                    First Name
                  </label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                </div>
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                    Last Name
                  </label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                  />
                </div>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                />
              </div>

              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
                  Company/Organization
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                />
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                  Subject
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                >
                  <option value="">Select a subject</option>
                  <option value="educational">Educational Solutions</option>
                  <option value="production">Custom Kit Production</option>
                  <option value="consulting">Consulting Services</option>
                  <option value="general">General Inquiry</option>
                  <option value="support">Support</option>
                </select>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                  Message
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows={6}
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                ></textarea>
              </div>

              <Button type="submit" variant="primary" size="lg" class="w-full">
                Send Message
              </Button>
            </form>
          </div>

          <!-- Contact Information -->
          <div>
            <Heading as="h2" class="mb-6">Contact Information</Heading>
            <p class="text-gray-600 mb-8">
              Reach out to us through any of the following channels. Our team is ready to assist
              you.
            </p>

            <div class="space-y-6">
              {
                contactInfo.map((info) => (
                  <a
                    href={info.link}
                    class="flex items-start space-x-4 p-4 rounded-lg hover:bg-gray-50 transition-colors"
                  >
                    <span class="text-2xl">{info.icon}</span>
                    <div>
                      <h3 class="font-semibold text-gray-900">{info.title}</h3>
                      <p class="text-gray-600">{info.content}</p>
                    </div>
                  </a>
                ))
              }
            </div>

            <!-- Map Placeholder -->
            <div class="mt-8 bg-gray-200 rounded-lg h-64 flex items-center justify-center">
              <p class="text-gray-600">Map Location</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <Heading as="h2" gradient class="text-center mb-8">Frequently Asked Questions</Heading>

        <div class="space-y-4">
          <details class="bg-white rounded-lg p-6 shadow-md">
            <summary class="font-semibold cursor-pointer">What services does Da Kong offer?</summary
            >
            <p class="mt-4 text-gray-600">
              We offer educational solutions, custom kit production, consulting services, and more.
              Visit our Services page for a complete list.
            </p>
          </details>

          <details class="bg-white rounded-lg p-6 shadow-md">
            <summary class="font-semibold cursor-pointer"
              >How long does custom kit production take?</summary
            >
            <p class="mt-4 text-gray-600">
              Production time varies depending on the complexity and quantity of your order.
              Typically, it ranges from 2-6 weeks. Contact us for a specific timeline.
            </p>
          </details>

          <details class="bg-white rounded-lg p-6 shadow-md">
            <summary class="font-semibold cursor-pointer">Do you ship internationally?</summary>
            <p class="mt-4 text-gray-600">
              Yes, we ship to most countries worldwide. Shipping costs and times vary by location.
            </p>
          </details>

          <details class="bg-white rounded-lg p-6 shadow-md">
            <summary class="font-semibold cursor-pointer">Can I request a custom quote?</summary>
            <p class="mt-4 text-gray-600">
              Absolutely! Use the contact form above or email us directly for a personalized quote.
            </p>
          </details>
        </div>
      </div>
    </div>
  </section>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import ModernHero from '../components/organisms/ModernHero.astro';
import Heading from '../components/atoms/Heading.astro';
import ModernButton from '../components/atoms/ModernButton.astro';
import Card from '../components/molecules/Card.astro';
import Heading from '../components/atoms/Heading.astro';
import Button from '../components/atoms/Button.astro';

const steps = [
  { title: '01 · Product Development', desc: 'We speak your creative language and develop products in line with market trends.' },
  { title: '02 · Packaging & Labeling', desc: 'Our packaging engineers develop appropriate packaging and labeling.' },
  { title: '03 · Manufacturing & Kitting', desc: 'In‑house assembly lines; we excel at complex bundles and kits.' },
  { title: '04 · Quality & Safety', desc: 'On‑the‑ground oversight with routine CPSIA, REACH, EN71, ASTM F‑963 testing.' },
  { title: '05 · Logistics & Distribution', desc: 'Optimized freight configurations; US 3PL in Kentucky for most orders.' },
];

const process = [
  { step: '01', title: 'Consultation', description: 'We discuss your needs and objectives' },
  { step: '02', title: 'Planning', description: 'Develop a customized solution strategy' },
  { step: '03', title: 'Implementation', description: 'Execute the plan with precision and care' },
  { step: '04', title: 'Support', description: 'Provide ongoing support and optimization' },
];
---

<Layout title="Private Label Solutions">
  <ModernHero
    title="Private Label Solutions"
    subtitle="Productized services that simplify development, de‑risk manufacturing and accelerate time‑to‑market."
    ctaText="Get a Quote"
    ctaHref="/get-started"
    secondaryCtaText="See Our Process"
    secondaryCtaHref="/process"
    primaryVariant="gradient"
    secondaryVariant="secondary"
    primaryGlow
  />

  <!-- Services Grid -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="bg-primary-50 border border-primary-100 text-primary-900 rounded-xl p-4 mb-8 text-sm">
        Optimized for production runs of <strong>2,000+ units</strong>. Typical lead times: <strong>12–20 weeks</strong> from final approval, depending on complexity.
      </div>
      <div class="text-center mb-12">
        <Heading as="h2" gradient class="mb-4">Productized Offerings</Heading>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Choose a path that matches your stage and goals.</p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded-lg shadow p-6 hover:shadow-md transition-shadow">
          <h3 class="text-2xl font-bold mb-2 text-primary">DaKong Launchpad</h3>
          <p class="text-gray-700 mb-3">End‑to‑end development for new products and kits — from concept and prototyping to compliant manufacturing and retail packaging.</p>
          <ul class="list-disc ml-5 text-gray-700 text-sm mb-4">
            <li>Deliverables: concepts, BOM, prototypes, packaging, production</li>
            <li>Typical timeline: 12–20 weeks depending on complexity</li>
            <li>Ideal MOQ: 2,000+ units</li>
          </ul>
          <div class="flex gap-3">
            <ModernButton href="/get-started" variant="primary" size="sm">Get a Quote</ModernButton>
            <ModernButton href="/process" variant="outline" size="sm">See Process</ModernButton>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 hover:shadow-md transition-shadow">
          <h3 class="text-2xl font-bold mb-2 text-primary">DaKong Eco‑Source</h3>
          <p class="text-gray-700 mb-3">Transition existing products to sustainable materials and packaging without sacrificing quality or margins.</p>
          <ul class="list-disc ml-5 text-gray-700 text-sm mb-4">
            <li>Materials: FSC board, recycled resins (rPET/rPP), paper‑based trays</li>
            <li>Proof: plastic reduction %, volume savings, freight efficiency</li>
            <li>Compliance maintained: ASTM, CPSIA, EN71</li>
          </ul>
          <div class="flex gap-3">
            <ModernButton href="/sustainability" variant="outline" size="sm">Learn More</ModernButton>
            <ModernButton href="/get-started" variant="primary" size="sm">Start a Brief</ModernButton>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow p-6 hover:shadow-md transition-shadow">
          <h3 class="text-2xl font-bold mb-2 text-primary">Kitting at Scale</h3>
          <p class="text-gray-700 mb-3">Complex bundle assembly and packaging on parallel lines — engineered for speed, accuracy and cost control.</p>
          <ul class="list-disc ml-5 text-gray-700 text-sm mb-4">
            <li>Capabilities: multi‑component kitting, labeling, retail‑ready packs</li>
            <li>Logistics: US 3PL in Kentucky; palletization and ASN prep</li>
            <li>Ideal use: subscription boxes, classroom kits, retail bundles</li>
          </ul>
          <div class="flex gap-3">
            <ModernButton href="/work" variant="outline" size="sm">See Work</ModernButton>
            <ModernButton href="/get-started" variant="primary" size="sm">Get a Quote</ModernButton>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="section-padding bg-gray-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <Heading as="h2" class="mb-4">Our Process</Heading>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          A streamlined approach to deliver exceptional results.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          process.map((item) => (
            <div class="text-center">
              <div class="w-20 h-20 mx-auto mb-4 bg-gradient-to-br from-primary to-primary-light rounded-full flex items-center justify-center text-white text-2xl font-bold">
                {item.step}
              </div>
              <h3 class="text-xl font-semibold mb-2">{item.title}</h3>
              <p class="text-gray-600">{item.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding">
    <div class="container-custom text-center">
      <Heading as="h2" class="mb-6">Ready to launch your private label?</Heading>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">Share your brief and we’ll respond with options, timelines and ballpark costs.</p>
      <ModernButton href="/get-started" variant="primary" size="lg" arrow="right">Get a Quote</ModernButton>
    </div>
  </section>
</Layout>

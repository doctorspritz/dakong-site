---
import Layout from '../layouts/Layout.astro';
import ModernHero from '../components/organisms/ModernHero.astro';
import Card from '../components/molecules/Card.astro';
import ModernButton from '../components/atoms/ModernButton.astro';
import Heading from '../components/atoms/Heading.astro';
import { Icon } from 'astro-icon/components';

const features = [
  {
    icon: 'custom/client-centric',
    title: 'Client‑centric Approach',
    description:
      'You get a dedicated project team and a transparent timeline. We tailor our process to fit your brief, budget, and deadlines.',
  },
  {
    icon: 'custom/experience',
    title: 'Experience & Expertise',
    description:
      '15+ years bringing educational products to market for global brands with a strong track record of launches.',
  },
  {
    icon: 'custom/compliance',
    title: 'Quality & Compliance',
    description:
      'Market‑ready results that meet or exceed ASTM F‑963, US CPSIA, and EN71 safety standards.',
  },
];

 
---

<Layout title="Home">
  <ModernHero
    title="Private‑Label Manufacturing for Educational & Toy Brands"
    subtitle="We turn your vision into reality. Our end‑to‑end process delivers compliant, retail‑ready educational products — on time and on budget."
    ctaText="Get a Quote"
    ctaHref="/get-started"
    secondaryCtaText="See Our Process"
    secondaryCtaHref="/process"
    image="/images/brand-collab.jpg"
    imageOpacity={0.18}
  />

  

  <!-- Brand Collaboration (from original site) -->
  <section id="brand-collaboration" class="section-padding bg-white">
    <div class="site-container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <img
          src="/images/brand-collab.jpg"
          alt="Brand Collaboration"
          class="w-full rounded-2xl shadow"
          data-aos="fade-right"
        />
        <div data-aos="fade-left">
          <h2 class="text-4xl md:text-5xl font-bold text-primary-900 mb-6">Brand Collaboration</h2>
          <p class="text-lg text-gray-700 mb-4">
            Our global infrastructure allows us to provide end-to-end solutions, including product
            development, manufacturing, packaging, and distribution.
          </p>
          <p class="text-lg text-gray-700 mb-8">
            We have the ability to adapt to market trends and changes in demand to ensure our
            clients' portfolios remain competitive.
          </p>
          <ModernButton href="/contact" variant="primary" size="md" arrow="right">
            Start Collaboration
          </ModernButton>
        </div>
      </div>
    </div>
  </section>

  <!-- Meet the Experts -->
  <section class="section-padding bg-white">
    <div class="site-container">
      <h2 class="text-3xl md:text-4xl font-bold text-primary-900 text-center mb-10">Meet the Experts</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-primary-600 text-white flex items-center justify-center text-2xl font-bold">ML</div>
          <h3 class="text-lg font-semibold">Miles Leach</h3>
          <p class="text-gray-600">Founder</p>
        </div>
        <div class="text-center">
          <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-primary-600 text-white flex items-center justify-center text-2xl font-bold">PD</div>
          <h3 class="text-lg font-semibold">Head of Product Development</h3>
          <p class="text-gray-600">Guides your product from initial concept to a production‑ready prototype.</p>
        </div>
        <div class="text-center">
          <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-primary-600 text-white flex items-center justify-center text-2xl font-bold">QA</div>
          <h3 class="text-lg font-semibold">Quality Assurance Manager</h3>
          <p class="text-gray-600">Ensures your product is fully compliant and ready for global markets.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section-padding bg-gray-50">
    <div class="site-container">
      <h2 class="text-3xl md:text-4xl font-bold text-primary-900 text-center mb-10">What Clients Say</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <figure class="bg-white rounded-2xl p-6 shadow">
          <blockquote class="text-gray-800">“DaKong was an invaluable partner in navigating safety standards for our European launch. Their attention to detail was flawless.”</blockquote>
          <figcaption class="mt-4 text-sm text-gray-600">Director of Product, Global Education Brand</figcaption>
        </figure>
        <figure class="bg-white rounded-2xl p-6 shadow">
          <blockquote class="text-gray-800">“They reduced plastic in our kits by over 70% without impacting margins. We hit our date with retail‑ready packaging.”</blockquote>
          <figcaption class="mt-4 text-sm text-gray-600">COO, Subscription Box Company</figcaption>
        </figure>
        <figure class="bg-white rounded-2xl p-6 shadow">
          <blockquote class="text-gray-800">“The team’s process discipline and responsiveness made a complex project feel straightforward. We’ll be back.”</blockquote>
          <figcaption class="mt-4 text-sm text-gray-600">VP Operations, Toy Startup</figcaption>
        </figure>
      </div>
    </div>
  </section>

  <!-- Featured Work -->
  <section class="section-padding bg-white">
    <div class="site-container">
      <div class="flex items-end justify-between mb-8 gap-4">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-primary-900">Proven Results</h2>
          <p class="text-gray-700">From concept to customer.</p>
        </div>
        <div>
          <ModernButton href="/work" variant="outline" size="md">View All</ModernButton>
        </div>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <a href="/work/subscription-science-kit" class="block group bg-white rounded-2xl shadow hover:shadow-md transition-shadow overflow-hidden">
          <div class="aspect-video bg-gray-100 overflow-hidden">
            <img src="/images/product-development.png" alt="Subscription Science Kit" class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform" />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Subscription Science Kit</h3>
            <p class="text-gray-700 mb-3">Plastic reduced by ~80% with paper‑based trays; on‑time launch for a monthly box.</p>
            <div class="badge">ASTM F‑963 compliant</div>
          </div>
        </a>

        <a href="/work/classroom-art-kit" class="block group bg-white rounded-2xl shadow hover:shadow-md transition-shadow overflow-hidden">
          <div class="aspect-video bg-gray-100 overflow-hidden">
            <img src="/images/products-custom-kits.jpg" alt="Classroom Art Kit" class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform" />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Classroom Art Kit</h3>
            <p class="text-gray-700 mb-3">99.6% kitting accuracy across first 25k units; retail‑ready packs for national retail.</p>
            <div class="badge">CPSIA labeling maintained</div>
          </div>
        </a>

        <a href="/products" class="block group bg-white rounded-2xl shadow hover:shadow-md transition-shadow overflow-hidden">
          <div class="aspect-video bg-gray-100 overflow-hidden">
            <img src="/images/products-2.jpg" alt="Custom Kits" class="w-full h-full object-cover group-hover:scale-[1.02] transition-transform" />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">High‑Volume Retail Launch</h3>
            <p class="text-gray-700 mb-3">Scaled production to 50,000+ units for a national retailer using parallel lines for maximum speed and cost‑efficiency.</p>
            <div class="badge">Scale: 50,000+ units</div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Visual Break: Full-Width Facility Image -->
  <section class="relative h-64 md:h-80 my-8">
    <img src="/images/product-development.png" alt="Assembly line" class="absolute inset-0 w-full h-full object-cover" />
    <div class="absolute inset-0 bg-gradient-to-t from-white/90 to-white/0"></div>
  </section>

  <!-- Features Section with Glass Cards -->
  <section class="section-padding relative overflow-hidden">
    <!-- Background decoration -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-primary-50 to-transparent dark:from-primary-900/10"
    >
    </div>

    <div class="site-container relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-6" data-aos="fade-up">
          Why work with <span class="text-gradient">DaKong?</span>
        </h2>
        <p class="text-xl description max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="0.1">
          Client‑centric processes, deep experience, and rigorous quality assurance.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          features.map((feature, index) => (
            <div class="glass-card rounded-2xl p-8 text-center">
              <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-primary-600 flex items-center justify-center shadow">
                <Icon name={feature.icon} class="w-10 h-10 text-white" />
              </div>
              <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
              <p class="description">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Product Development & Custom Kits (Gallery) -->
  <section id="product-development" class="section-padding bg-white">
    <div class="site-container">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-primary-900 mb-6">
          Product Development &<br />Custom Kits Production
        </h2>
        <p class="text-lg text-gray-700 max-w-3xl mx-auto">
          Our 60,000 sq ft facility runs parallel kitting and packaging lines, engineered for speed,
          accuracy and cost control.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        <img src="/images/product-development.png" alt="Kitting line" class="w-full rounded-2xl shadow" data-aos="zoom-in" />
        <img src="/images/products-2.jpg" alt="Packaging cell" class="w-full rounded-2xl shadow" data-aos="zoom-in" data-aos-delay="0.1" />
      </div>
      <div class="mt-6 grid md:grid-cols-3 gap-6">
        <img src="/images/products-3.jpg" alt="Assembly detail" class="w-full rounded-2xl shadow" data-aos="zoom-in" data-aos-delay="0.15" />
        <img src="/images/products-custom-kits.jpg" alt="Finished kits" class="w-full rounded-2xl shadow" data-aos="zoom-in" data-aos-delay="0.2" />
        <img src="/images/brand-collab.jpg" alt="Team at work" class="w-full rounded-2xl shadow" data-aos="zoom-in" data-aos-delay="0.25" />
      </div>
      <div class="mt-8 text-center">
        <ModernButton href="/products" variant="outline" size="md">See More</ModernButton>
      </div>
    </div>
  </section>

  <!-- Sustainability -->
  <section id="sustainability" class="section-padding bg-gray-50">
    <div class="site-container">
      <div class="text-center mb-10">
        <h2 class="text-4xl md:text-5xl font-bold text-primary-900 mb-6">Sustainability</h2>
        <p class="text-lg text-gray-700 max-w-3xl mx-auto">
          Reduce plastic, improve recyclability, and optimize freight through smart material choices
          and packaging redesigns.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        <Card title="Eco Materials" description="FSC‑certified woods, recycled plastics (rPET/rPP), and biodegradable alternatives." />
        <Card title="Efficient Packaging" description="Paper‑based trays and right‑sized cartons; typical volume reductions of ~10–20%." />
        <Card title="Compliance First" description="ASTM F‑963, CPSIA, EN71 maintained through substitutions and labeling updates." />
      </div>
      <div class="mt-10 text-center">
        <ModernButton href="/contact" variant="primary" size="md">Let's Talk</ModernButton>
      </div>
    </div>
  </section>

  

  <!-- CTA Section with Modern Design -->
  <section class="section-padding relative overflow-hidden">

    <div class="site-container relative z-10">
      <div class="glass-heavy rounded-3xl p-12 md:p-16 text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-6 text-primary-900">Ready to Build Your Next Bestseller?</h2>
        <p class="text-xl description mb-10 max-w-2xl mx-auto">
          Join hundreds of organizations that trust Da Kong for their most critical projects.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <ModernButton href="/contact" variant="primary" size="lg" arrow="right">
            Let's Talk
          </ModernButton>
          <ModernButton href="/services" variant="outline" size="lg"> Learn More </ModernButton>
        </div>
      </div>
    </div>
  </section>

  <!-- Certifications & Standards -->
  <section class="section-padding bg-white">
    <div class="site-container">
      <div class="text-center mb-8">
        <h2 class="text-2xl md:text-3xl font-bold">Certifications & Standards</h2>
        <p class="text-gray-600">We build to global safety standards and recognized programs.</p>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-3 items-center justify-items-center text-sm">
        <div class="badge">ASTM F‑963</div>
        <div class="badge">US CPSIA</div>
        <div class="badge">EN71</div>
        <div class="badge">FSC Materials</div>
        <div class="badge">ICTI Ethical Toy</div>
      </div>
    </div>
  </section>
</Layout>

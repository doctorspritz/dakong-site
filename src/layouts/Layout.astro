---
import ModernHeader from '../components/organisms/ModernHeader.astro';
import Footer from '../components/organisms/Footer.astro';
import ScrollToTop from '../components/atoms/ScrollToTop.astro';
import '../styles/global-modern.css';
import '@fontsource-variable/inter';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Da Kong - Education and Custom Kit Production' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&display=swap" rel="stylesheet" />
    {
      import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN && (
        <script defer data-domain={import.meta.env.PUBLIC_PLAUSIBLE_DOMAIN} src="https://plausible.io/js/script.js"></script>
      )
    }
    {
      import.meta.env.PUBLIC_GA_ID && (
        <>
          <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_ID}`}></script>
          <script>
            {`
              window.dataLayer = window.dataLayer || [];
              function gtag(){dataLayer.push(arguments);} gtag('js', new Date());
              gtag('config', '${import.meta.env.PUBLIC_GA_ID}');
            `}
          </script>
        </>
      )
    }
    <meta property="og:title" content={`${title} | Da Kong`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url.pathname, Astro.site ?? 'https://www.da-kong.com').toString()} />
    <meta property="og:image" content="/images/hero-banner.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Da Kong`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/hero-banner.png" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <title>{title} | Da Kong</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <ModernHeader />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <ScrollToTop />

    <script>
      import AOS from '../js/aos';

      document.addEventListener('DOMContentLoaded', () => {
        AOS.init({
          duration: 0.35,
          once: true,
          mirror: false,
          distance: 8,
        });
      });
    </script>
  </body>
</html>

---
export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<button
  id="scroll-to-top"
  class={`fixed bottom-8 right-8 p-3 bg-primary text-white rounded-full shadow-lg transition-all duration-300 opacity-0 invisible hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary z-40 ${className}`}
  aria-label="Scroll to top"
>
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
</button>

<script>
  const scrollButton = document.getElementById('scroll-to-top');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 300) {
      scrollButton?.classList.remove('opacity-0', 'invisible');
      scrollButton?.classList.add('opacity-100', 'visible');
    } else {
      scrollButton?.classList.add('opacity-0', 'invisible');
      scrollButton?.classList.remove('opacity-100', 'visible');
    }
  });

  scrollButton?.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth',
    });
  });
</script>

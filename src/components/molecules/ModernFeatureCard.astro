---
import { Icon } from 'astro-icon/components';

export interface Props {
  icon?: string;
  title: string;
  description: string;
  color?: 'primary' | 'secondary' | 'accent';
  class?: string;
  delay?: number;
}

const {
  icon,
  title,
  description,
  color = 'primary',
  class: className = '',
  delay = 0,
} = Astro.props;

const colorClasses = {
  primary: 'from-primary-500 to-primary-600',
  secondary: 'from-secondary to-blue-600',
  accent: 'from-accent-primary to-orange-600',
};
---

<div class={`group modern-card p-8 ${className}`}>
  <!-- Icon container with gradient background -->
  {
    icon && (
      <div class={`w-16 h-16 rounded-2xl bg-primary-600 flex items-center justify-center mb-6 shadow` }>
        <Icon name={icon} class="w-8 h-8 text-white" />
      </div>
    )
  }

  <!-- Content -->
  <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">
    {title}
  </h3>

  <p class="description">
    {description}
  </p>

  <!-- Subtle divider -->
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gray-200 dark:bg-gray-800" />
</div>

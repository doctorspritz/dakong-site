---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  href?: string;
  class?: string;
}

const { title, description, image, imageAlt = '', href, class: className = '' } = Astro.props;

const Component = href ? 'a' : 'div';
---

<Component
  href={href}
  class={`block bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:scale-105 ${className}`}
>
  {
    image && (
      <div class="aspect-video overflow-hidden bg-gray-100">
        <img src={image} alt={imageAlt} class="w-full h-full object-cover" />
      </div>
    )
  }
  <div class="p-6">
    {title && <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>}
    {description && <p class="text-gray-600">{description}</p>}
    <slot />
  </div>
</Component>

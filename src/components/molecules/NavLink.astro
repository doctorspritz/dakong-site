---
export interface Props {
  href: string;
  isActive?: boolean;
  class?: string;
}

const { href, isActive = false, class: className = '' } = Astro.props;

const activeClass = isActive ? 'text-primary font-semibold' : 'text-gray-700 hover:text-primary';
---

<a href={href} class={`px-4 py-2 transition-colors duration-200 ${activeClass} ${className}`}>
  <slot />
</a>

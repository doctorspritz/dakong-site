---
import ModernButton from '../atoms/ModernButton.astro';
import Heading from '../atoms/Heading.astro';

export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  image?: string;
  imageOpacity?: number; // 0..1
  class?: string;
}

const {
  title,
  subtitle,
  ctaText,
  ctaHref,
  secondaryCtaText,
  secondaryCtaHref,
  image,
  imageOpacity = 0.12,
  class: className = '',
} = Astro.props;
---

<section class={`relative min-h-[60vh] flex items-center overflow-hidden ${className}`}>
  <!-- Light, brand-aligned background -->
  <div class="absolute inset-0 bg-gradient-to-b from-white to-primary-50"></div>

  <!-- Hero content -->
  <div class="site-container relative z-10">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Badge -->
      

      <!-- Main heading with gradient -->
      <h1 class="text-5xl sm:text-6xl md:text-7xl font-bold text-primary-900 mb-6 leading-tight">
        {title}
      </h1>

      {
        subtitle && (
          <p class="text-xl md:text-2xl text-gray-700 mb-10 max-w-3xl mx-auto leading-relaxed">
            {subtitle}
          </p>
        )
      }

      {
        (ctaText || secondaryCtaText) && (
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            {ctaText && (
              <ModernButton
                href={ctaHref}
                variant="primary"
                size="lg"
                arrow="right"
                class="min-w-[200px]"
              >
                {ctaText}
              </ModernButton>
            )}
            {secondaryCtaText && (
              <ModernButton
                href={secondaryCtaHref}
                variant="outline"
                size="lg"
                class="min-w-[200px]"
              >
                {secondaryCtaText}
              </ModernButton>
            )}
          </div>
        )
      }
    </div>
  </div>

  {image && (
    <div class="absolute inset-0 z-0" style={{ opacity: String(imageOpacity) }}>
      <img src={image} alt="" class="w-full h-full object-cover" />
    </div>
  )}
</section>

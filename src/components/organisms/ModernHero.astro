---
import ModernButton from '../atoms/ModernButton.astro';
import Heading from '../atoms/Heading.astro';

export interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
  secondaryCtaText?: string;
  secondaryCtaHref?: string;
  image?: string;
  imageOpacity?: number; // 0..1
  videoSrc?: string;
  videoPoster?: string;
  videoOpacity?: number; // 0..1
  primaryVariant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'gradient';
  secondaryVariant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'gradient';
  primaryGlow?: boolean;
  class?: string;
}

const {
  title,
  subtitle,
  ctaText,
  ctaHref,
  secondaryCtaText,
  secondaryCtaHref,
  image,
  imageOpacity = 0.12,
  videoSrc,
  videoPoster,
  videoOpacity = 1,
  primaryVariant = 'primary',
  secondaryVariant = 'outline',
  primaryGlow = false,
  class: className = '',
} = Astro.props;
---

<section class={`relative min-h-[60vh] flex items-center overflow-hidden ${className}`}>
  <!-- Background/scrim: darken when video present, light brand gradient otherwise -->
  {
    videoSrc ? (
      <div class="absolute inset-0 bg-black/40 md:bg-black/50"></div>
    ) : (
      <div class="absolute inset-0 bg-gradient-to-b from-white to-primary-50"></div>
    )
  }

  <!-- Hero content -->
  <div class="site-container relative z-10">
    <div class="max-w-5xl mx-auto text-center">
      <!-- Badge -->
      

      <!-- Main heading with gradient -->
      <h1 class={`text-5xl sm:text-6xl md:text-7xl font-bold mb-6 leading-tight ${videoSrc ? 'text-white' : 'text-primary-900'}`}>
        {title}
      </h1>

      {
        subtitle && (
          <p class={`text-xl md:text-2xl mb-10 max-w-3xl mx-auto leading-relaxed ${videoSrc ? 'text-white/85' : 'text-gray-700'}`}>
            {subtitle}
          </p>
        )
      }

      {
        (ctaText || secondaryCtaText) && (
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            {ctaText && (
              <ModernButton
                href={ctaHref}
                variant={primaryVariant}
                size="lg"
                arrow="right"
                class="min-w-[200px]"
                glow={primaryGlow}
              >
                {ctaText}
              </ModernButton>
            )}
            {secondaryCtaText && (
              <ModernButton
                href={secondaryCtaHref}
                variant={secondaryVariant}
                size="lg"
                class="min-w-[200px]"
              >
                {secondaryCtaText}
              </ModernButton>
            )}
          </div>
        )
      }
    </div>
  </div>

  {videoSrc ? (
    <div class="absolute inset-0 z-0" style={{ opacity: String(videoOpacity) }}>
      <video src={videoSrc} poster={videoPoster || image} autoplay muted loop playsinline class="w-full h-full object-cover"></video>
    </div>
  ) : (
    image && (
      <div class="absolute inset-0 z-0" style={{ opacity: String(imageOpacity) }}>
        <img src={image} alt="" class="w-full h-full object-cover" />
      </div>
    )
  )}
</section>
